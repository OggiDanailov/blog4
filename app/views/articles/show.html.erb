<h1>This is the show Articles page</h1>
<h3><strong>This is the name of the post</strong></h3>

<%= @article.title %>
<br>
<br>
<h3><strong>This is the text of the post</strong></h3>

<%= @article.text %>
<hr>
<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <%= link_to 'Destroy Comment', [comment.article, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
<% end %>



<hr>
<h1>Make a comment</h1>

<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


<hr>
<%= link_to 'Create another post', new_article_path %>
<br>
<%= link_to 'See all Articles', articles_path %>